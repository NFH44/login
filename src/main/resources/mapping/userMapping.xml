<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.test.dao.UserDao">
    <select id="findByUsernameAndPassword" parameterType="map"
            resultType="com.test.entity.User">
        SELECT username,password
        FROM user
        WHERE username=#{username}
        AND password=#{password}
    </select>

    <select id="findByUsername" parameterType="com.test.entity.User" resultType="com.test.entity.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <insert id="insert1" parameterType="com.test.entity.User">
       INSERT INTO user VALUES (#{id},#{username},#{password},#{gender})
    </insert>
</mapper>